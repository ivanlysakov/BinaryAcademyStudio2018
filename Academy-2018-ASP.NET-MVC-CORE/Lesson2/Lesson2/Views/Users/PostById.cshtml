@model Lesson2.Models.Post
@{
    ViewData["Title"] = "PostById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PostById</h2>



<table class="table table-hover w-aut">
    <thead class="thead-light">
        <tr>
            <td scope="col"><h3><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Post</h3></td>
            <td scope="col"> <h3><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Comments</h3></td>


        </tr>
    </thead>
    <tbody>

        <tr>

            <td>
                <h4>@Model.Title</h4>
                <br />
                @Model.Body
            </td>
            <td>
                @if (Model.Comments?.Count > 0)
                {

                    <table class="table table-hover w-aut">
                        <tbody>
                            @foreach (var comment in Model.Comments)
                            {
                                <tr>
                                    <td>@comment.Body <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> @comment.Likes</td>
                                </tr>
                            }

                        </tbody>
                    </table>

                }
            </td>

        </tr>

    </tbody>

</table>

