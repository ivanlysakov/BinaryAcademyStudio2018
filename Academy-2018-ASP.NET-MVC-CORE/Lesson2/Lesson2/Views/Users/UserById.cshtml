@model Lesson2.Models.User
@{
    ViewData["Title"] = "GetSortedUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserById</h2>
<br />

  
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <td></td>
                <td>Email</td>
                <td>Posts</td>
                <td>Comments</td>
                <td>Todos</td>
             
            </tr>

        </thead>

        <tbody>
          
            <tr>
                <td width="10%">
                    <div class="avatar">
                        <img src=@Model.Avatar alt="avatarchik" style="width:200px;height:200px" />
                        <div class="avatar_text">
                             <p>
                                @Model.Name
                             </p>
                        </div>
                    </div>
                </td>

                <td>@Model.Email</td>

                <td>
                    @Model.Posts.Count
                </td>
                <td>
                    @Model.Comments.Count
                </td>
                <td>
                    @Model.Todos.Count
                </td>
           

            </tr>
                <tr >
                    <td>

                        <table>
                            <tr>
                                <td>

                                    @if (Model.Posts?.Count > 0)
                                    {
                                        <h3><span class="glyphicon 	glyphicon glyphicon-pencil" aria-hidden="true"></span> Posts</h3>
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>postid</th>
                                                    <th>body</th>
                                                    <th>likes</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var post in Model.Posts)
                                                {
                                                    <tr>
                                                        <td>@post.Id</td>
                                                        <td>
                                                            <a href="@Url.Action("PostById", "Users", new { id = post.Id })" class="elements">
                                                                <span>@post.Body</span>
                                                            </a>
                                                        </td>
                                                        <td>@post.Likes</td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>

                                    }
                                </td>

                            </tr>
                        </table>
                    </td>
                    <td>

                        <table>
                            <tr>
                                <td>
                                    @if (Model.Comments?.Count > 0)
                                    {
                                        <h3><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Comments</h3>
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>commentid</th>
                                                    <th>body</th>
                                                    <th>likes</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var comment in Model.Comments)
                                                {
                                                    <tr>
                                                        <td>@comment.Id</td>
                                                        <td>
                                                            @comment.Body
                                                        </td>
                                                        <td>@comment.Likes</td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>

                                    }
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </td>

                    <td>

                        <table>
                            <tr>
                                <td>
                                    @if (Model.Todos?.Count > 0)
                                    {

                                        <h3><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Todos</h3>
                                        <table class="table table-hover w-aut">
                                            <thead>
                                                <tr>
                                                    <th>todoId</th>
                                                    <th>name</th>
                                                    <th>status</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var todo in Model.Todos)
                                                {
                                                <tr>
                                                    <td>@todo.Id</td>
                                                   
                                                    <td>
                                                        <a href="@Url.Action("PostById", "Users", new { id = todo.Id })" class="elements">
                                                            <span> @todo.Name</span>
                                                        </a>
                                                    </td>
                                                    <td>@todo.IsComplete</td>
                                                </tr>
                                                }



                                            </tbody>
                                        </table>

                                    }
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            
        </tbody>
    </table>
</div>

