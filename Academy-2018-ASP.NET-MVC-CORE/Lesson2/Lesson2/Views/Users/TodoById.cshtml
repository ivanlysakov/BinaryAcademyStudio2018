@model Lesson2.Models.Todo
@{
    ViewData["Title"] = "TodoById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TodoById</h2>

<h3><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Todos</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.IsComplete</td>
        </tr>
    </tbody>
</table>